<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/appBarLayoutHome"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            app:title="Home"
            app:titleTextColor="@color/white"
            android:layout_height="wrap_content">
            <Button android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:text="@string/btn_txt_sair"
                android:id="@+id/btn_sair"
            />

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <EditText
        android:id="@+id/et_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginTop="60sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayoutHome"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="20sp"
        android:hint="@string/txt_tarefa"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70sp"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayoutHome"
        android:gravity="center"
        android:id="@+id/layout_task"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20sp"
            android:text="@string/btn_add" />
        <Button
            android:id="@+id/btn_delete"
            app:layout_constraintTop_toBottomOf="@+id/layout_task"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/red"
            android:layout_height="wrap_content"
            android:text="@string/delete" />
    </LinearLayout>

    <ListView
        android:id="@+id/list_view_tasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/layout_task"
        android:choiceMode="multipleChoice"
         />

</androidx.constraintlayout.widget.ConstraintLayout>